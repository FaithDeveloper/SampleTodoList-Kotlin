<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.kcs.sampletodolist.view.todo.TodoListFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/enableButton"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/txt_id_frame"
            android:layout_width="@dimen/txt_join_title_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/id"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_join_title_size" />

        <TextView
            android:id="@+id/txt_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/txt_id_frame"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="ssdfdsfdsfdsfdsf"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_join_title_size" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_add_box"
            android:textColor="@color/black" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_todo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem = "@layout/cell_todo_list"
        android:layout_weight="1" />
</LinearLayout>
